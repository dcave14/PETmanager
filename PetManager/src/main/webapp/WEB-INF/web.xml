<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>petController</servlet-name>
        <servlet-class>controller.PetController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPetServlet</servlet-name>
        <servlet-class>controller.AddPetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOwnerServlet</servlet-name>
        <servlet-class>controller.AddOwnerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePetServlet</servlet-name>
        <servlet-class>controller.DeletePetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOwnerServlet</servlet-name>
        <servlet-class>controller.DeleteOwnerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPetServlet</servlet-name>
        <servlet-class>controller.EditPetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditOwnerServlet</servlet-name>
        <servlet-class>controller.EditOwnerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPetsServlet</servlet-name>
        <servlet-class>controller.ListPetsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOwnersServlet</servlet-name>
        <servlet-class>controller.ListOwnersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>petController</servlet-name>
        <url-pattern>/managePets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPetServlet</servlet-name>
        <url-pattern>/AddPetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOwnerServlet</servlet-name>
        <url-pattern>/AddOwnerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePetServlet</servlet-name>
        <url-pattern>/DeletePetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOwnerServlet</servlet-name>
        <url-pattern>/DeleteOwnerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPetServlet</servlet-name>
        <url-pattern>/EditPetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditOwnerServlet</servlet-name>
        <url-pattern>/EditOwnerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPetsServlet</servlet-name>
        <url-pattern>/ListPetsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOwnersServlet</servlet-name>
        <url-pattern>/ListOwnersServlet</url-pattern>
    </servlet-mapping>
</web-app>
